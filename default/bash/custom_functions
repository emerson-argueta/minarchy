# start database connections for springscharter data
springs-db-connections() {
  echo "Starting database tunnels in tmux..."
  tmux new-window -n "user-svc" "gcloud compute ssh root@springs-user-service -- -N -L 57566:scharter-data.xcoe.online:57566"
  tmux split-window -h -t "user-svc" "gcloud compute ssh root@oasis -- -N -L 5432:127.0.0.1:5432"
  tmux split-window -v -t "user-svc" "~/cloud-sql-proxy --unix-socket /cloudsql springs-258017:us-west1:apitest"
  tmux split-window -v -t "user-svc" "~/cloud-sql-proxy --unix-socket /cloudsql springs-258017:us-west2:api"
  tmux select-layout -t "user-svc" tiled
  echo "All connections initiated in tmux window 'user-svc'."
}
