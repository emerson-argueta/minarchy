#!/bin/sh

# 1. Find and focus the Chromium window.
#    This regex matches 'chromium', 'google-chrome', etc.
hyprctl dispatch focuswindow 'class:^(chromium|Chromium|google-chrome|Google-chrome)$'

sleep 0.2

# 3. Use wtype to simulate "Ctrl+Shift+A" (Chrome's tab search)
wtype -M ctrl -M shift a -m ctrl -m shift
